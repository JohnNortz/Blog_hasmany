<% @post.comments.each do |comment| %>
    <tr>
      <td><%= comment.author %></td>
      <td><%= comment.text %></td>

      <td><%= link_to 'Show', post_comment_path(comment.post, comment) %></td>
      <% if can? :update, Post %>
        <td><%= link_to 'Edit', edit_post_comment_path(comment.post, comment)%></td>
        <td><%= link_to 'Delete', post_comment_path(comment.post, comment), :confirm => 'Are you sure?', :method => :delete %></td>
      <% end%>
    </tr>
<% end %>
